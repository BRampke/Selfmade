<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.selfmade">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Selfmade">
        <activity
                android:name=".AccountSettingsActivity"
                android:exported="true"
                android:label="@string/title_activity_account_settings"/>
        <activity
                android:name=".ProjectUpdateActivity"
                android:exported="true"
                android:label="@string/title_activity_project_update"
                android:theme="@style/Theme.Selfmade.NoActionBar"/>
        <activity
                android:name=".ProjectDraftActivity"
                android:exported="true"
                android:label="@string/title_activity_project_draft"
                android:theme="@style/Theme.Selfmade.NoActionBar"/>
        <activity
                android:name=".ProjectCreatorActivity"
                android:exported="true"
                android:label="@string/title_activity_project_creator"
                android:theme="@style/Theme.Selfmade.NoActionBar"/>
        <activity
                android:name=".MainActivity"
                android:exported="true"
                android:label="@string/title_activity_main"/>
        <activity
                android:name=".ui.login.LoginActivity"
                android:exported="true"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>