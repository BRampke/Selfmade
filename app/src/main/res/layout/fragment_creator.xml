<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.creator.CreatorFragment"
        android:gravity="center">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:padding="20dp"
                      android:orientation="vertical"
                      android:gravity="center">
            <TextView
                    android:text="Project Manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:paddingBottom="25dp"
                    android:id="@+id/tvProjectManagerTitle"/>
            <Button
                    android:text="Create"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:id="@+id/btnPMCreateProject"
                    app:icon="@drawable/ic_dashboard_black_24dp"/>

            <Button
                    android:text="Update"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:id="@+id/btnUpdateProjects"
                    app:icon="@drawable/ic_dashboard_black_24dp"/>

            <Button
                    android:text="Drafts"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:id="@+id/btnDraftProjects"
                    app:icon="@drawable/ic_dashboard_black_24dp"/>
        </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>